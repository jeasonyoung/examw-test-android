<?xml version="1.0" encoding="utf-8"?>
<!-- 错题模版选项背景-左边 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中时背景颜色 -->
    <item android:state_checked="true">
        <shape>
            	<!--背景色  -->
	            <solid android:color="@color/default_color" />
	            <!-- 边框色 -->
	            <stroke android:width="@dimen/border_width" android:color="@color/default_color"/>
	            <!-- 左边圆角 -->
	            <corners android:topLeftRadius="@dimen/corners_radius" android:bottomLeftRadius="@dimen/corners_radius"/>
	            <!-- 边距 -->
	            <padding android:left="@dimen/border_width" android:bottom="@dimen/border_width" android:right="@dimen/border_width" android:top="@dimen/border_width"/>
	       </shape>
    </item>
    <!-- 未选中时背景颜色 -->
    <item android:state_checked="false">
        <shape>
            	<!--背景色  -->
	            <solid android:color="@color/white" />
	            <!-- 边框色 -->
	            <stroke android:width="0.5dip" android:color="@color/default_color"/>
	            <!-- 左边圆角 -->
	            <corners android:topLeftRadius="@dimen/corners_radius" android:bottomLeftRadius="@dimen/corners_radius"/>
	            <!-- 边距 -->
	            <padding android:left="@dimen/border_width" android:bottom="@dimen/border_width" android:right="@dimen/border_width" android:top="@dimen/border_width"/>
	       </shape>
    </item>
</selector>