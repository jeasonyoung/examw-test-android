<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_selector_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/paper_tyep_imgView"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10.0dip"
        android:scaleType="fitXY" 
        android:src="@drawable/record_exam_img"
        />

    <TextView
        android:id="@+id/paper_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_toRightOf="@id/paper_tyep_imgView"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium_size" 
        />
    <TextView
        android:id="@+id/paper_usedTime_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/paper_name_TextView"
        android:layout_below="@id/paper_name_TextView"
        android:layout_marginTop="5.0dip"
        android:textColor="@color/red"
        android:textSize="@dimen/text_small_size" 
        />
    <TextView
        android:id="@+id/paper_info_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/paper_name_TextView"
        android:layout_below="@id/paper_usedTime_TextView"
        android:layout_marginTop="5.0dip"
        android:paddingBottom="10.0dip"
        android:textSize="@dimen/text_small_size" 
        />
	<TextView
	    android:id="@+id/lastTimeTextView"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/paper_usedTime_TextView"
        android:paddingBottom="10.0dip"
        android:layout_marginRight="10.0dip"
        android:textSize="@dimen/text_small_size"
        android:textColor="@color/black" 
        android:layout_marginTop="5.0dip"
        />
</RelativeLayout>