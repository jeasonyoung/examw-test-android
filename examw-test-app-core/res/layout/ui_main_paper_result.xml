<?xml version="1.0" encoding="utf-8"?>
<!-- 试卷提交结果 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <!-- banner -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_head" />
    
    <!-- 结果列表 -->
    <ListView android:id="@+id/list_main_paper_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top"
        android:layout_marginBottom="@dimen/list_bottom"
        android:background="@color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/topic_driver"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="visible" />
    
    <!-- 查看试题按钮 -->
    <Button android:id="@+id/paper_result_btnReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top"
        android:layout_marginBottom="@dimen/list_bottom"
        android:paddingLeft="@dimen/list_left"
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_left"
        android:paddingEnd="@dimen/list_left"
        android:paddingTop="@dimen/list_top"
        android:paddingBottom="@dimen/list_bottom"
        android:text="@string/main_paper_result_btn"
        android:textColor="@color/btn_pressed_normal_textcolor"
        android:background="@drawable/btn_normal_bg"/>

</LinearLayout>