<?xml version="1.0" encoding="utf-8"?>
<!-- 试卷列表项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    
    <!-- 试卷名称 -->
    <TextView android:id="@+id/home_paper_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/list_l_size" 
        android:paddingLeft="@dimen/list_left" 
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"/>
    
    <!-- 科目名称 -->
    <TextView android:id="@+id/home_paper_subjectname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/list_m_size" 
        android:paddingLeft="@dimen/list_left" 
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"/>
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/list_top"
       android:layout_marginBottom="@dimen/list_bottom"
       android:orientation="horizontal">
       
       <!-- 试题数 -->
       <TextView android:id="@+id/home_paper_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/default_color"
        android:textSize="@dimen/list_m_size" 
        android:paddingLeft="@dimen/list_left" 
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"/>
       
       <!-- 发布日期 -->
       <TextView android:id="@+id/home_paper_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/grey"
        android:textSize="@dimen/list_s_size" 
        android:paddingLeft="@dimen/list_left" 
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"/>
       
   </LinearLayout>
</LinearLayout>