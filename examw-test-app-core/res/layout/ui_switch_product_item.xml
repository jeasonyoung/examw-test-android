<?xml version="1.0" encoding="utf-8"?>
<!-- 切换产品－产品行布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_top"
    android:layout_marginBottom="@dimen/list_bottom"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_min_cellHeight"
    android:orientation="vertical" >
    
     <!-- 1.产品名称 -->
    <TextView android:id="@+id/product_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/list_m_size" 
        android:paddingTop="@dimen/list_top"
        android:paddingLeft="@dimen/list_left" 
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginBottom="@dimen/list_bottom"
    	android:gravity="center_vertical"
   		android:minHeight="@dimen/list_min_cellHeight"
        android:orientation="horizontal">
        
        <!-- 2.试卷数 -->
        <TextView android:id="@+id/product_item_papers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_m_size"
             android:paddingLeft="@dimen/list_left" 
        	android:paddingStart="@dimen/list_left"
        	android:paddingRight="@dimen/list_right"
        	android:paddingEnd="@dimen/list_right"/> 
        	
        <!-- 3.试题数 -->
        <TextView android:id="@+id/product_item_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/list_m_size"
             android:paddingLeft="@dimen/list_left" 
        	android:paddingStart="@dimen/list_left"
        	android:paddingRight="@dimen/list_right"
        	android:paddingEnd="@dimen/list_right"/> 
        	
        <!-- 4.原价 -->
        <TextView android:id="@+id/product_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#FF6347" 
            android:textSize="@dimen/list_m_size"
             android:paddingLeft="@dimen/list_left" 
        	android:paddingStart="@dimen/list_left"
        	android:paddingRight="@dimen/list_right"
        	android:paddingEnd="@dimen/list_right"/> 
        	
        <!-- 5.优惠价 -->
        <TextView android:id="@+id/product_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#008B45"
            android:textSize="@dimen/list_m_size"
             android:paddingLeft="@dimen/list_left" 
        	android:paddingStart="@dimen/list_left"
        	android:paddingRight="@dimen/list_right"
        	android:paddingEnd="@dimen/list_right"/> 
        
    </LinearLayout>

</LinearLayout>
