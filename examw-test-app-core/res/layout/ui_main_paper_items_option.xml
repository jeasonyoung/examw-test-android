        android:drawableLeft="@drawable/option_single_normal"
        android:drawableStart="@drawable/option_single_normal"
        android:drawablePadding="@dimen/img_text_padding"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/list_l_size"/>
    
