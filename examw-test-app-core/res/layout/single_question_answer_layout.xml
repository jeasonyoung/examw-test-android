<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam_answer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10.0dip"
    android:background="@drawable/answer_layout_bg"
    android:orientation="vertical"
    android:padding="5.0dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/myAnswerStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:text="@string/exam_myAnswerStr"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_size" />

        <TextView
            android:id="@+id/myAnswerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_toRightOf="@id/myAnswerStr"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_medium_size" />

        <ImageView
            android:id="@+id/answerResultImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/myAnswerTextView"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_toRightOf="@+id/myAnswerTextView"
            android:src="@drawable/answer_wrong_pto" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sysAnswerStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:text="@string/exam_sysAnswerStr"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_size" />

        <com.examw.test.widget.ImageTextView
            android:id="@+id/sysAnswerTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:layout_toLeftOf="@+id/btn_note"
            android:layout_toRightOf="@id/sysAnswerStr"
            android:textColor="@color/green"
            android:textSize="@dimen/text_medium_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5.0dip"
        android:background="@drawable/answer_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/examAnalysisStr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="@string/exam_analysisStr"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_size" />

        <com.examw.test.widget.ImageTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_analysisTextView"
            android:padding="5.0dip"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_size" />
    </LinearLayout>

</LinearLayout>