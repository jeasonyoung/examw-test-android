<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10.0dip"
    android:orientation="vertical" 
    android:background="#99000000"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/btn_small"
            android:layout_width="120.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/font_bg"
            android:button="@null"
            android:drawableTop="@drawable/font_small"
            android:gravity="center_horizontal"
            android:paddingTop="10.0dip" />

        <RadioButton
            android:id="@+id/btn_big"
            android:layout_width="120.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/font_bg"
            android:button="@null"
            android:drawableTop="@drawable/font_big"
            android:paddingTop="10.0dip" />
    </RelativeLayout>

    <ImageView
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/dividing_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/small_sun" />

        <SeekBar
            android:id="@+id/light_seekbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:maxHeight="8.0dip"
            android:minHeight="8.0dip"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/new_seekbar_thumb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/big_sun" />
    </LinearLayout>

    <ImageView
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/dividing_line" />

    <LinearLayout
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/vibrate_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/btn_vibrate"
            android:text="答错震动"
            android:textColor="@color/answer_setting_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/yj_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/btn_night_mode"
            android:text="夜间模式"
            android:textColor="@color/answer_setting_color" 
            android:visibility="gone"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/sc_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/btn_fullscreen"
            android:text="全屏显示"
            android:textColor="@color/answer_setting_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

</LinearLayout>