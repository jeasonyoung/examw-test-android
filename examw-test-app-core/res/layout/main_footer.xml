<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linearlayout_footer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_footer_bg_normal_color"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/btn_home"
        style="@style/main_footbar_radio"
        android:drawableBottom="@drawable/weight_home"
        android:drawablePadding="-20dip"
        android:checked="true"
        />

    <ImageView
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:src="@color/main_footer_divider_color" />

    <RadioButton
        android:id="@+id/btn_setting"
       	style="@style/main_footbar_radio"
        android:drawableBottom="@drawable/weight_setting"
        android:drawablePadding="-20dip"
        />

    <ImageView
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:src="@color/main_footer_divider_color" />
    
    <RadioButton
        android:id="@+id/btn_more"
        style="@style/main_footbar_radio"
        android:drawableBottom="@drawable/weight_more"
        android:drawablePadding="-20dip"
        />
</LinearLayout>