<?xml version="1.0" encoding="utf-8"?>
<!-- 关于应用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >
    
    <!-- Banner -->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_head" />
    
    <!-- 列表数据 -->
    <ListView android:id="@+id/list_more_abouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top"
        android:layout_marginBottom="@dimen/list_bottom"
        android:background="@color/white" 
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/topic_driver"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="visible" />
    
</LinearLayout><!-- From: file:/Users/workspace/examw-test-android/examw-test-app-core/res/layout/ui_main_more_about.xml -->