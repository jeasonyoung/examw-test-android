<!-- 头部Banner -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 返回按钮 -->
    <ImageButton android:id="@+id/btn_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/list_left"
        android:layout_marginStart="@dimen/list_left"
        android:gravity="center_vertical"
        android:background="@color/transparent" 
        android:src="@drawable/btn_goback"
        android:contentDescription="@string/top_head_btn_desc"/>
    
    <!-- 标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:minHeight="@dimen/top_title_minHeight"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_l" />
</RelativeLayout><!-- From: file:/Users/workspace/examw-test-android/examw-test-app-core/res/layout/top_head.xml -->