<?xml version="1.0" encoding="utf-8"?>
<!-- 更多模块布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >
    
    <!-- 标题 -->
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/top_title_minHeight"
        android:paddingTop="@dimen/list_top"
        android:paddingBottom="@dimen/list_bottom"
        android:layout_marginBottom="@dimen/list_bottom"
        android:paddingLeft="@dimen/list_left"
        android:paddingStart="@dimen/list_left"
        android:paddingRight="@dimen/list_right"
        android:paddingEnd="@dimen/list_right"
        android:background="@color/default_color" 
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/main_more_title"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_l"/>
    
    <!-- 菜单列表 -->
    <ListView android:id="@+id/list_more_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_bottom"
        android:background="@color/white" 
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/topic_driver"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="visible" />
    
     <!-- 退出登录按钮(默认设置不可见)-->
     <Button android:id="@+id/main_more_btnLogout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:minHeight="@dimen/list_min_cellHeight" 
         android:layout_marginTop="@dimen/list_top"
         android:layout_marginLeft="@dimen/list_left"
         android:layout_marginStart="@dimen/list_left"
         android:layout_marginRight="@dimen/list_left"
         android:layout_marginEnd="@dimen/list_left"
         android:paddingTop="@dimen/list_top"
         android:paddingBottom="@dimen/list_bottom"
         android:gravity="center_vertical|center_horizontal"
         android:text="@string/main_more_logout"
         android:textColor="@color/btn_pressed_selected_textcolor"
         android:textSize="@dimen/fontsize_l"
         android:background="@drawable/btn_selected_bg"
         android:visibility="invisible"/>
     
     <!-- 占位空隙 -->
     <View android:layout_width="match_parent"
        android:layout_height="20dip"/>

</LinearLayout><!-- From: file:/Users/workspace/examw-test-android/examw-test-app-core/res/layout/ui_main_more.xml -->