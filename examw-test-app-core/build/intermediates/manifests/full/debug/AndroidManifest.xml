<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examw.test"
    android:versionCode="1"
    android:versionName="1.0.0" > <!-- 支持的androidSDK版本 -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />
    <!-- 设定多分辨率支持[能得到正确的屏幕尺寸] -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <!-- 权限申明 -->
    <!-- 接入网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 访问wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 读写SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 获取mac地址作为用户的备用唯一标识 -->
    <!-- 获取手机设备码 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- QQ、QQ空间所需权限 -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name="com.examw.test.app.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 启动入口,欢迎界面 -->
        <activity
            android:name="com.examw.test.ui.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 产品切换界面 -->
        <activity
            android:name="com.examw.test.ui.SwitchActivity"
            android:screenOrientation="portrait" />

        <!-- 主界面 -->
        <activity
            android:name="com.examw.test.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 试卷信息界面 -->
        <activity
            android:name="com.examw.test.ui.PaperInfoActivity"
            android:screenOrientation="portrait" />

        <!-- 注册界面 -->
        <activity
            android:name="com.examw.test.ui.RegisterActivity"
            android:screenOrientation="portrait" />

        <!-- 登陆界面 -->
        <activity
            android:name="com.examw.test.ui.LoginActivity"
            android:screenOrientation="portrait" />

        <!-- 下载试卷 -->
        <activity
            android:name="com.examw.test.ui.DownloadActivity"
            android:screenOrientation="portrait" />

        <!-- 意见反馈 -->
        <activity
            android:name="com.examw.test.ui.FeedBackActivity"
            android:screenOrientation="portrait" />

        <!-- 关于应用 -->
        <activity
            android:name="com.examw.test.ui.AboutActivity"
            android:screenOrientation="portrait" />

        <!-- 试卷做题界面 -->
        <activity
            android:name="com.examw.test.ui.PaperActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

        <!-- 答题卡 -->
        <activity
            android:name="com.examw.test.ui.PaperCardActivity"
            android:screenOrientation="portrait" />

        <!-- 试卷提交结果 -->
        <activity
            android:name="com.examw.test.ui.PaperResultActivity"
            android:screenOrientation="portrait" />

        <!-- 做题记录 -->
        <activity
            android:name="com.examw.test.ui.PaperRecordActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>